<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="소환사 정보 변경"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/TextView_summonerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소환사 이름"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
        <TextView
            android:id="@+id/TextView_summonerName_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소환사 이름 입력"
            android:textSize="13sp"
            android:layout_toRightOf="@id/TextView_summonerName"/>
        <EditText
            android:id="@+id/EditText_summonerName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_summonerName"
            />
        <Button
            android:id="@+id/Button_summonerName_check"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/TextView_summonerName"
            android:layout_toRightOf="@+id/EditText_summonerName"
            android:text="check"
            android:textSize="8sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/Button_changeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경하기" />
</LinearLayout>