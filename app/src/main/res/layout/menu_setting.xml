<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="195dp">

        <LinearLayout
            android:id="@+id/LinearLayout_menuBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ImageButton_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/usericon"
                android:clickable="true"/>
            <ImageButton
                android:id="@+id/ImageButton_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/chaticon"
                android:clickable="true"/>
            <ImageButton
                android:id="@+id/ImageButton_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/searchicon"
                android:clickable="true"/>
            <ImageButton
                android:id="@+id/ImageButton_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#807878"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/settingicon"
                android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/TextView_PWChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:background="#C3B8B8"
                android:clickable="true"
                android:layout_marginHorizontal="15dp"/>
            <TextView
                android:id="@+id/TextView_SummonerChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소환사명 변경"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:background="#C3B8B8"
                android:clickable="true"
                android:layout_marginHorizontal="15dp"/>
            <TextView
                android:id="@+id/TextView_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="앱 로그아웃"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:background="#C3B8B8"
                android:clickable="true"
                android:layout_marginHorizontal="15dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>